<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center|end"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp">
                <Button
                    android:id="@+id/b_ac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="AC"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#68FAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp">
                <Button
                    android:enabled="false"
                    android:id="@+id/b_percent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="%"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#68FAFAFA"/>/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp">
                <ImageButton
                    android:id="@+id/ib_clear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_backspace_24"
                    android:background="#68FAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/b_devide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="รท"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="7"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="8"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="9"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_multiply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="x"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="4"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="5"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="6"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_minus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="-"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">

                <Button
                    android:id="@+id/b_num1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3EFAFAFA"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:backgroundTint="@null" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="2"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="3"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_plus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="+"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_num0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_dot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="."
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#3EFAFAFA"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp">
                <Button
                    android:id="@+id/b_equals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="@null"
                    android:text="="
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:background="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>